pipeline {
    environment {
    registry = "suganthi95/ecommerce_application"
    registryCredential = 'docker-hub-credential'
    dockerImage = 'node-appp'
    }

    agent any
    stages {
            stage('Cloning our Git') {
                steps {
                //git 'https://github.com/suganthi95/node-docker.git'
                          checkout scm
                }
            }

             stage('Building Docker Image') {
                steps {
                    script {
                         bat 'docker build -t node-appp .'

                    }
                }
            }

            stage('Run the Docker Image') {
                steps {
                    script {
                       // docker.withRegistry('', registryCredential) {
                        //dockerImage.push()
                          bat "docker run -p 6000:4000 node-appp" 
                         
                        }
                    }
                }
            }
            stage('Push docker image to docker hub'){
                 steps {
                    script {
                       // docker.withRegistry('', registryCredential) {
                        //dockerImage.push()
                          //bat "docker run -p 6000:4000 my-node-app" 
                          bat "docker tag my-node-app suganthi95/ecommerce_application:latest"

                         bat "docker push suganthi95/ecommerce_application:latest "
                        }
                    }
                }
            }
