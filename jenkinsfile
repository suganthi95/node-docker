pipeline {
    agent any 
        docker {
            image 'node:16.17.1' 
            args '-p 6000:4000' 
        }
    
    
    stages {
        stage('Clone git repository') {
            steps {
                checkout scm 
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    def appImage = docker.build("ecommerce_application/ecom-app-image:2")
                    appImage.push()
                }
            }
        }
        
        stage('Deploy to Production') {
            steps {
                script {
                    // Assuming you have a server to deploy to and the appropriate credentials set up
                   // withCredentials([usernamePassword(credentialsId: 'docker-hub-credential', passwordVariable: 'Keasnmacaa@95', usernameVariable: 'suganthi95')]) {
                        sh 'docker login -u suganthi95 -p Keasnmacaa@95'
                        sh 'docker pull ecommerce_application/ecom-app-image:${env.BUILD_NUMBER}'
                        sh 'docker run -d -p 6000:4000 ecommerce_application/ecom-app-image:${env.BUILD_NUMBER}'
                    }
                }
            }
        }
    }


