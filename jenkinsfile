pipeline {
    agent any

      stages {
        stage('Clone Repository'){
            steps{
                git branch: 'main',
                    url: 'https://github.com/suganthi95/node-docker.git'
            }
        }

        stage('Build') {
            steps {
                // Build the Docker image for the Node.js application
                sh 'docker build -t my-node-app .'
            }
        }

        stage('Test') {
            steps {
                // Run tests for your Node.js application (if applicable)
                sh 'docker run --rm my-node-app npm test'
            }
        }

        stage('Deploy') {
            steps {
                // Push the Docker image to a container registry
                withCredentials([usernamePassword(credentialsId: 'docker-hub-credential', passwordVariable: 'Keasnmacaa@95', usernameVariable: 'suganthi95')]) {
                    sh "docker login -u suganthi95 -p Keasnmacaa@95"
                }

                sh 'docker push my-node-app'
            }
        }
}
}
