pipeline {
    environment {
    registry = "suganthi95/ecommerce_application"
    registryCredential = 'docker-hub-credential'
    dockerImage = 'my-node-app'
    }

    agent any
    stages {
            stage('Cloning our Git') {
                steps {
                //git 'https://github.com/suganthi95/node-docker.git'
                          checkout scm
                }
            }

             stage('Building Docker Image') {
                steps {
                    script {
                        sh "docker.build $registry:$BUILD_NUMBER"
                    }
                }
            }

            stage('Deploying Docker Image to Dockerhub') {
                steps {
                    script {
                       // docker.withRegistry('', registryCredential) {
                        //dockerImage.push()
                          sh "docker run -it -p 6000:4000 my-node-app" 
                          sh "docker latest my-node-app suganthi95/ecommerce_application:latest"

                         sh "docker push suganthi95/ecommerce_application:latest "
                        }
                    }
                }
            }

            stage('Cleaning Up') {
                steps{
                  sh "docker rmi --force $registry:$BUILD_NUMBER"
                }
            }
        }
    
