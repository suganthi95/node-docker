pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from your version control system
                // You may need to configure the repository URL and credentials
                checkout scm
            }
        }

        stage('Build') {
            steps {
                // Build the Docker image
                // Make sure you have a Dockerfile in your repository
                sh 'docker build -t my-node-app .'
            }
        }

        stage('Test') {
            steps {
                // Run tests for your Node.js application
                // Replace 'npm test' with your actual test command
                sh 'docker run --rm my-node-app npm test'
            }
        }

        stage('Deploy') {
            steps {
                // Deploy the Docker image to your server or container registry
                // Replace 'your-container-registry' with your actual registry
                // Replace 'latest' with a specific version tag if desired
                sh 'docker tag my-node-app ecommerce_application/my-node-app:latest'
                sh 'docker push ecommerce_application/my-node-app:latest'
            }
        }
    }
        
    }



